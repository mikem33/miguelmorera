/* ---------------------------- *\

    $Thoughts

\*----------------------------- */

.thoughts__list
    background-color #f45a5a

.thought
    &.single--thought, &--single
        background-color white
    &.single
        .meta time::after
            background-color #d4d4d4
    &--single
        .alignfull
            margin-top 2rem
            margin-bottom 2rem
    &__comment-form, &__comments-list
        background-color white
    &__comment-form
        text-align center
        padding-bottom 50px
        header
            text-align left
            margin-bottom 10px
        .title
            margin-bottom 0
            line-height 30px

.thought.item
    color white
    border-bottom-color rgba(white, .25)
    figure
        &::before
            mix-blend-mode lighten
            background-color rgba($mmRed, .7)
    .meta
        color #fab9b9
        time::after
            background-color @color
    .beta a
        color white
    .item__link
        color $mmDarkRed
        .ico
            fill $mmDarkRed

.single--thought
    .wrapper
        max-width 680px