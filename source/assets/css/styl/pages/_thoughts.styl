/* ---------------------------- *\

    $Thoughts

\*----------------------------- */

.thoughts__list
    background-color #f45a5a

.thought
    &.single--thought, &--single
        background-color white
    &--single
        .alignfull
            margin-top 2rem
            margin-bottom 2rem
        .wrapper
            max-width 680px
        a
            color $mmRed

.thought.item
    color white
    border-bottom-color rgba(white, .25)
    figure a
        &::before
            mix-blend-mode lighten
            background-color rgba($mmRed, .7)
    .title a
        color white
        &[data-lang]::after
            color $mmRed
    .meta
        color #fab9b9
        time::after
            background-color @color
    .item__link
        color $mmDarkRed
        .ico
            fill @color

.no-touch
    .thought.item
        figure a
            &:hover::before
                background-color rgba($mmRed, 1)
        .title a
            &:hover
                color $mmDarkRed
            &[data-lang]:hover::after
                color white
                background-color $mmDarkRed
        .item__link:hover
            color white
            .ico
                fill white