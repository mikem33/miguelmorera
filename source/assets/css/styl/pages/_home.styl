    $Home

\*----------------------------- */

.page__template-home
    .page__header
        background-color var(--main-page-color)
        .content
            max-width 233px
            .button
                margin-top 10px
        canvas
            top 0
            left 0
            z-index 0
            max-width 100%
            position absolute
        .content, .content-anchor
            z-index 1
    .alpha-warning
        color var(--main-page-color)
    .content-anchor
        fill white
        bottom 30px
        height 20px
        display block
        centerObject(true, false)

.home__section
    padding-top 55px
    text-align center
    .section__header .title
        text-align left
        fontSizeLine(32, 36)

.home__blog
    color white
    background-color $mmRed

.post--item
    color white
    border-bottom-color rgba(white, .25)
    figure
        &::before
            top 0
            left 0
            z-index 1
            content ''
            width 100%
            height 100%
            position absolute
            pointer-events none
            mix-blend-mode lighten
            background-color rgba($mmRed, .7)
    .meta
        color #fab9b9
        time::after
            background-color @color
    .beta a
        color white
    .item__link
        color $mmDarkRed
        .ico
            fill $mmDarkRed

.home__comics
    background-color $mmYellow
    .section__header .title
        max-width 230px
        color $darkGrey
    .comic--item
        border-color $darkGrey
        .beta a, .meta, .meta a
            color $darkGrey