/* ---------------------------- *\

    $Works

\*----------------------------- */

.works__list
    text-align center
    background-color $mmBlue

.work
    text-align left
    &__meta
        padding-left 10px
        padding-right 10px
        margin-bottom 50px
        display inline-block
        border-bottom 2px solid #d8d8d8
        > div
            margin-right 50px
            display inline-block
            vertical-align middle
            &:last-child
                margin-right 0
            span
                fontSize(14)
                text-transform uppercase
            .delta
                fontSize(20)
                margin-bottom 12px
                a
                    color $darkGrey
    &__intro, &__outro
        background-color #fff2f2

.work.item
    border-color #99bdfa
    header
        text-align center
        a
            display block
        .title
            color white
            margin-bottom 0
        p
            color #99bdfa
    figure
        margin-bottom 0
        a
            display block
        &::before
            mix-blend-mode screen
            background-color $mmBlue
    .item__link
        color #99bdfa
        .ico
            fill #99bdfa

/* ---------------------------- *\

    $Media $Queries

\*----------------------------- */

+above(1200)
    /* $min-width: $1200px */

    .works__list
        .work header p
            fontSize(20)

+below(767)
    /* $max-width: $767px */

    .page__template-works
        .page__header .content
            max-width 255px

    .works__list
        padding-top 30px
        .work header .title
            line-height 28px