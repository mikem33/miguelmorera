.page__template-comics, .single--comic
    .page__header
        background-image url("data:image/svg+xml,%3Csvg width='20' height='20' viewBox='0 0 20 20' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='%232c2c2c' fill-opacity='0.18' fill-rule='evenodd'%3E%3Ccircle cx='3' cy='3' r='3'/%3E%3Ccircle cx='13' cy='13' r='3'/%3E%3C/g%3E%3C/svg%3E")

.comics__list
    text-align center
    background-color #ffe42b
    .comic
        text-align left
        border-color $mmBrown
        .meta
            color $mmBrown
        .categories a
            color $mmBrown

.comic.item
    border-color $darkGrey
    border-bottom-color rgba($mmBrown, .5)
    figure a::before
        mix-blend-mode multiply
        background-color rgba($mmYellow, .6)
    .title a
        color $darkGrey
        &[data-lang]::after
            color white
            background-color $darkGrey
    .meta, .meta a, .item__link
        color $mmBrown
    .item__link .ico
        fill @color

.no-touch
    .comic.item
        figure a
            &:hover::before
                background-color rgba($mmYellow, 1)
        .title a
            &:hover
                color $mmBrown
            &[data-lang]:hover::after
                background-color $mmBrown
        .item__link:hover
            color $darkGrey
            .ico
                fill $darkGrey